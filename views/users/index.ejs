<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 mt-5">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-lg-12 margin-tb">
                                <div class="right mb-3">
                                    <a href="/logout" class="btn btn-secondary" onclick="return confirm('ingin keluar?')">logout</a>
                                </div>
                                <div class="pull-left">
                                    <!-- <h4>user</h4> -->
                                    <a href="/users" style="color: black;">user</a>
                                    <a href="/siswas" style="color: black;">siswa</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <a href="/create" class="btn btn-primary mb-4">Tambah</a>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Email</th>
                                    <th>Username</th>
                                    <th>Role</th>
                                    <th>action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach((user, i) => { %>
                                   <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= user.email  %></td>
                                    <td><%= user.username  %></td>
                                    <td><%= user.role  %></td>
                                    <td>
                                        <a href="/edit/<%= user.id %>">edit</a>
                                        <a href="/users/delete/<%= user.id %>" onclick="return confirm(`hapus data <%= user.username %>`)">delete</a>
                                    </td>
                                   </tr> 
                                <% }); %>
                            </tbody>
                          </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>